<Window x:Class="Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task01"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="550">
    <StackPanel TextElement.FontSize="16">
        <Button Height="50" Width="525" Background="Red" Content="First button" RenderTransformOrigin="0, 0">
            <Button.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="5"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Height="50" Width="525" Background="Green" Content="Second button" RenderTransformOrigin="0.5,0.5">
            <Button.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="-40"/>
                </TransformGroup>
            </Button.LayoutTransform>
        </Button>
        <Button Height="50" Width="525" Background="LightYellow" Content="Third button"/>
    </StackPanel>
</Window>
