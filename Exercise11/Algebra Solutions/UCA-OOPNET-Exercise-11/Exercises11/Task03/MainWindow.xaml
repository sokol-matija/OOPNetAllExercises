<Window x:Class="Task03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task03"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="50">
    
    <DockPanel LastChildFill="True">
        <Button Content="Top" DockPanel.Dock="Top" Background="Red"/>
        <Button Content="Bottom" DockPanel.Dock="Bottom" Background="DarkRed"/>
        <Button Content="Left" DockPanel.Dock="Left" Background="Yellow"/>
        <Button Content="Right" DockPanel.Dock="Right" Background="LightGreen"/>
        <Button Content="Center" Background="LightGray"/>
    </DockPanel>
</Window>
