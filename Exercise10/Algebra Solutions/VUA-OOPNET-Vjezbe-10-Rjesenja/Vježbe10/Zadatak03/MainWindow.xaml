<Window x:Class="Zadatak03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadatak03"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="20" FontFamily="Segoe UI">
    <Grid>
        <Button>
            <TextBlock TextWrapping="Wrap">
                <Run Foreground="Blue">Prva linija teksta</Run>
                <LineBreak/>
                <Span Foreground="DarkRed">Druga <Underline><Italic><Bold>linija</Bold></Italic></Underline> teksta</Span>
                <LineBreak/>
                <Run Foreground="Green">Treća linija teksta</Run>
                <LineBreak/>
                <TextBlock TextWrapping="Wrap" Background="#333" Padding="10" Foreground="Yellow">
                    Novi blok teksta
                    <LineBreak/>
                    Druga linija novog bloka teksta
                </TextBlock>
            </TextBlock>
        </Button>
    </Grid>
</Window>
