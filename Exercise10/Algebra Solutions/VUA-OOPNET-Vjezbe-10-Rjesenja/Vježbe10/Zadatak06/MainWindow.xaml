<Window x:Class="Zadatak06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadatak06"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal"> 
            <!--IsDefault znaci da ce se defaultno kliknuti pritiskom na Enter-->
            <Button x:Name="btnDodaj" IsDefault="True" Content="Dodaj" Margin="10" Padding="10" Click="btnDodaj_Click"/>
            <Button x:Name="btnUkloni" Content="Ukloni" Margin="10" Padding="10" Click="btnUkloni_Click"/>
        </StackPanel>
        
        <WrapPanel x:Name="pnlContainer" Orientation="Horizontal"/>
    </StackPanel>
</Window>
